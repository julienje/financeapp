{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinVersions"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "minimumReleaseAge": "7 days",
  "packageRules": [
    {
      "matchSourceUrls": ["https://github.com/testcontainers/testcontainers-dotnet"],
      "groupName": "Test containers dotnet"
    },
    {
      "matchSourceUrls": ["https://github.com/demystifyfp/FsToolkit.ErrorHandling"],
      "groupName": "FsToolkit ErrorHandling"
    },
    {
      "matchSourceUrls": [
      "https://github.com/dotnet/aspnetcore",
      "https://github.com/dotnet/efcore",
      "https://github.com/dotnet/extensions",
      "https://github.com/dotnet/maui",
      "https://github.com/dotnet/runtime",
      "https://github.com/dotnet/sdk",
      "https://github.com/dotnet/fsharp"
    ],
      "groupName": "Extended dotnet"
    },
    {
      "matchPackageNames": [
        "@azure/msal-browser",
        "@azure/msal-react"
      ],
      "groupName": "msal"
    }
  ]
}
